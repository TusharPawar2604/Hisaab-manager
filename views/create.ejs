<%- include('./partials/header.ejs') %>
    <div class="w-full min-h-[calc(100vh-4rem)] flex items-center justify-center px-4 py-12">
        <div class="bg-white p-8 sm:p-10 rounded-2xl shadow-lg w-full max-w-lg border border-slate-100">
            <div class="mb-6">
                <h2 class="text-2xl font-bold text-slate-800">Create New Hisaab</h2>
                <p class="text-slate-500 text-sm mt-1">Keep track of your daily expenses</p>
            </div>

            <form action="/hisaab/create" method="post" class="space-y-5">
                <div>
                    <label class="block text-sm font-medium text-slate-700 mb-1.5">Title</label>
                    <input required name="title" type="text" placeholder="e.g., Monthly Groceries, Goa Trip"
                        class="w-full px-4 py-2.5 bg-slate-50 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500/20 focus:border-blue-500 transition-all text-slate-900 placeholder:text-slate-400">
                </div>

                <div>
                    <label class="block text-sm font-medium text-slate-700 mb-1.5">Description</label>
                    <textarea required name="description" placeholder="List your items here..."
                        class="resize-y w-full px-4 py-2.5 bg-slate-50 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500/20 focus:border-blue-500 transition-all text-slate-900 placeholder:text-slate-400 h-32"></textarea>
                </div>

                <div class="bg-slate-50 p-4 rounded-lg border border-slate-200 space-y-3">
                    <div class="flex items-start">
                        <div class="flex items-center h-5">
                            <input id="encrypted" name="encrypted" type="checkbox"
                                class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500 focus:ring-2">
                        </div>
                        <div class="ml-3 text-sm">
                            <label for="encrypted" class="font-medium text-slate-700">Encrypt this file</label>
                            <p class="text-slate-500 text-xs">Password protect this hisaab</p>
                        </div>
                    </div>

                    <div id="passcode-container" class="hidden transition-all duration-300">
                        <input name="passcode" type="password" placeholder="Set a passcode"
                            class="mt-2 w-full px-4 py-2 bg-white border border-slate-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500/20 focus:border-blue-500 text-sm">
                    </div>
                </div>

                <div class="flex items-center gap-6">
                    <div class="flex items-center">
                        <input id="shareable" name="shareable" type="checkbox"
                            class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500 focus:ring-2">
                        <label for="shareable" class="ml-2 text-sm font-medium text-slate-700">Shareable</label>
                    </div>
                    <div class="flex items-center">
                        <input id="editpermissions" name="editpermissions" type="checkbox"
                            class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500 focus:ring-2">
                        <label for="editpermissions" class="ml-2 text-sm font-medium text-slate-700">Editable by
                            others</label>
                    </div>
                </div>

                <div>
                    <button type="submit"
                        class="w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2.5 rounded-lg transition-all duration-200 shadow-md hover:shadow-lg transform active:scale-[0.98]">
                        Create New Hisaab
                    </button>
                </div>
            </form>
        </div>
    </div>

    <script>
        const encryptedCheckbox = document.getElementById('encrypted');
        const passcodContainer = document.getElementById('passcode-container');

        encryptedCheckbox.addEventListener('change', function () {
            if (this.checked) {
                passcodContainer.classList.remove('hidden');
            } else {
                passcodContainer.classList.add('hidden');
            }
        });
    </script>