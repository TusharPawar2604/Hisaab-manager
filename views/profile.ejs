<%- include('./partials/header.ejs') %>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-10">
        <div class="mb-10 flex flex-col sm:flex-row items-start sm:items-center justify-between gap-4">
            <div>
                <h1 class="text-3xl font-bold text-slate-800">Hey, <%= user.name %> üëãüèª</h1>
                <p class="text-slate-500 mt-1">Here's what's happening with your Hisaabs today.</p>
            </div>
            <div class="flex items-center gap-3">
                <a href="/hisaab/create"
                    class="inline-flex items-center gap-2 bg-blue-600 hover:bg-blue-700 text-white px-4 py-2.5 rounded-lg transition-all shadow-md hover:shadow-lg font-medium">
                    <i class="ri-add-line"></i> Create New
                </a>
            </div>
        </div>

        <!-- Filters Section -->
        <div class="bg-white p-4 rounded-xl shadow-sm border border-slate-200 mb-8">
            <form class="flex flex-col lg:flex-row gap-4 lg:items-center justify-between" action="/profile"
                method="get">
                <div class="flex flex-wrap items-center gap-4">
                    <div
                        class="px-3 py-1.5 bg-slate-100 text-slate-600 rounded-md font-medium text-sm flex items-center gap-2">
                        <i class="ri-sound-module-fill"></i> Filters
                    </div>

                    <div id="bydate"
                        class="cursor-pointer hover:bg-slate-100 px-3 py-1.5 rounded-md text-slate-600 font-medium text-sm flex items-center gap-2 transition-colors border border-transparent hover:border-slate-200">
                        <i class="ri-calendar-line"></i> Date Range
                    </div>

                    <div
                        class="hidden dates flex flex-wrap gap-2 items-center animate-in fade-in slide-in-from-left-2 duration-300">
                        <input
                            class="bg-slate-50 border border-slate-300 text-slate-700 text-sm px-3 py-1.5 rounded-md focus:ring-2 focus:ring-blue-500/20 focus:border-blue-500 outline-none"
                            name="startDate" type="date">
                        <span class="text-slate-400">-</span>
                        <input
                            class="bg-slate-50 border border-slate-300 text-slate-700 text-sm px-3 py-1.5 rounded-md focus:ring-2 focus:ring-blue-500/20 focus:border-blue-500 outline-none"
                            name="endDate" type="date">
                    </div>
                </div>

                <div class="flex items-center gap-3">
                    <select
                        class="bg-slate-50 border border-slate-300 text-slate-700 text-sm px-3 py-2 rounded-md focus:ring-2 focus:ring-blue-500/20 focus:border-blue-500 outline-none"
                        name="byDate">
                        <option value="-1">Newest First</option>
                        <option value="1">Oldest First</option>
                    </select>
                    <button type="submit"
                        class="bg-slate-800 hover:bg-slate-900 text-white px-4 py-2 rounded-md text-sm font-medium transition-colors">
                        Apply Filters
                    </button>
                </div>
            </form>
        </div>

        <!-- Hisaab Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <% if(user.hisaab.length> 0) { %>
                <% user.hisaab.forEach(function(hisaab){ %>
                    <div
                        class="group bg-white rounded-xl shadow-sm hover:shadow-md border border-slate-200 p-5 transition-all duration-300 hover:-translate-y-1 relative overflow-hidden">
                        <!-- Card Decorations -->
                        <div class="absolute top-0 right-0 p-5 opacity-5">
                            <i class="ri-file-list-3-line text-6xl"></i>
                        </div>

                        <div class="flex justify-between items-start mb-4">
                            <div class="flex gap-2">
                                <% if(hisaab.encrypted){ %>
                                    <div
                                        class="px-2.5 py-1 rounded-full flex gap-1.5 items-center bg-blue-50 text-blue-600 border border-blue-100">
                                        <i class="text-xs ri-lock-2-fill"></i>
                                        <span class="text-xs font-semibold">Encrypted</span>
                                    </div>
                                    <% } else { %>
                                        <div
                                            class="px-2.5 py-1 rounded-full flex gap-1.5 items-center bg-emerald-50 text-emerald-600 border border-emerald-100">
                                            <i class="text-xs ri-check-double-line"></i>
                                            <span class="text-xs font-semibold">Available</span>
                                        </div>
                                        <% } %>

                                            <% if(!hisaab.shareable){ %>
                                                <div class="px-2.5 py-1 rounded-full bg-slate-100 text-slate-500 border border-slate-200"
                                                    title="Not Shareable">
                                                    <i class="text-xs ri-eye-off-line"></i>
                                                </div>
                                                <% } %>
                            </div>
                        </div>

                        <h3
                            class="text-lg font-bold text-slate-800 mb-2 line-clamp-1 group-hover:text-blue-600 transition-colors">
                            <%= hisaab.title %>
                        </h3>

                        <div class="text-xs text-slate-400 mb-4 font-medium flex items-center gap-1">
                            <i class="ri-calendar-event-line"></i>
                            Created on <%= hisaab.createdAt.getDate() %>
                                <%= ["Jan","Feb","Mar","Apr","May","Jun","Jul","Aug","Sep","Oct","Nov","Dec"][hisaab.createdAt.getMonth()]
                                    %>
                                    <%= hisaab.createdAt.getFullYear() %>
                        </div>

                        <div class="mt-4 pt-4 border-t border-slate-100 flex justify-end">
                            <a class="text-blue-600 text-sm font-medium hover:text-blue-700 flex items-center gap-1 hover:gap-2 transition-all"
                                href="/hisaab/view/<%= hisaab._id %>">
                                View Details <i class="ri-arrow-right-line"></i>
                            </a>
                        </div>
                    </div>
                    <% }) %>
                        <% } else { %>
                            <div class="col-span-full flex flex-col items-center justify-center py-20 text-center">
                                <div
                                    class="w-16 h-16 bg-slate-100 rounded-full flex items-center justify-center mb-4 text-slate-400">
                                    <i class="ri-file-add-line text-3xl"></i>
                                </div>
                                <h3 class="text-lg font-semibold text-slate-800">No Hisaabs found</h3>
                                <p class="text-slate-500 max-w-sm mt-2">You haven't created any hisaabs yet. Start by
                                    creating your first one!</p>
                                <a href="/hisaab/create" class="mt-6 text-blue-600 font-medium hover:underline">Create a
                                    new Hisaab</a>
                            </div>
                            <% } %>
        </div>
    </div>

    <script>
        document.querySelector("#bydate").addEventListener("click", function (event) {
            const datesDiv = document.querySelector(".dates");
            datesDiv.classList.toggle("hidden");
            datesDiv.classList.toggle("flex"); // Ensure flex is toggled
        });
    </script>