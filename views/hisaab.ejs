<%- include('./partials/header.ejs') %>
<div class="max-w-2xl mx-auto p-6 bg-white rounded-lg mt-10">
    <div
        class="absolute copieddiv hidden top-16 md:top-10 left-1/2 -translate-x-1/2 -translate-y-1/2 px-3 py-2 bg-blue-500 rounded-md">
        <h3 class="text-blue-200 text-base md:text-xl">
            Link copied
        </h3>
    </div>
    
    <div class="flex flex-wrap justify-between items-center mb-4 gap-4">
        <h1 class="text-xl md:text-2xl font-bold">Khaatabook</h1>
        <div class="flex flex-wrap gap-2 md:gap-4">
            <button class="bg-blue-500 text-white px-4 py-2 rounded text-sm md:text-base">Encrypted</button>
            <button class="sharebtn text-gray-700 px-4 py-2 rounded flex items-center space-x-2 text-sm md:text-base">
                <span id="Urlbtn">Share as a link</span>
            </button>
            <a href="/hisaab/delete/<%= hisaab._id %>" class="bg-red-500 text-white px-4 py-2 rounded text-sm md:text-base">Delete</a>
            <a href="/hisaab/edit/<%= hisaab._id %>" class="bg-yellow-400 text-white px-4 py-2 rounded text-sm md:text-base">Edit</a>
        </div>
    </div>
    
    <div class="text-gray-500 mb-4 text-sm md:text-base">
        Created on <%= hisaab.createdAt.getDate() %> - <%= hisaab.createdAt.getMonth() + 1 %> - <%= hisaab.createdAt.getFullYear() %>
    </div>

    <h2 class="text-lg md:text-xl font-semibold mb-2"><%= hisaab.title %></h2>
    <p class="text-gray-700 text-sm md:text-base"><%= hisaab.description %></p>
</div>



    <script>
        var timer;
        const sharebtn = document.querySelector(".sharebtn");
        sharebtn.addEventListener("click", function (e) {
            clearTimeout(timer);

            document.querySelector(".copieddiv")
                .classList.remove("hidden");

            timer = setTimeout(function () {
                document.querySelector(".copieddiv")
                    .classList.add("hidden");
            }, 3000)
        })

    document.querySelector("#Urlbtn")
    .addEventListener("click",function(){
        navigator.clipboard.writeText(window.location.href)
    })

    </script>

    <%- include('./partials/footer.ejs') %>