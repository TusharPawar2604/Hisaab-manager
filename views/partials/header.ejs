<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hisaab Manager</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <link href="https://cdn.jsdelivr.net/npm/remixicon@4.2.0/fonts/remixicon.css" rel="stylesheet" />
    <link rel="shortcut icon" href="/images/icon.png" type="image/png">
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Inter', sans-serif;
        }
    </style>
</head>

<body class="bg-slate-50 text-slate-800 antialiased min-h-screen flex flex-col">

    <!-- Toast Container -->
    <div id="toast-container"
        class="fixed top-5 right-5 z-50 flex flex-col space-y-3 pointer-events-none w-full max-w-sm px-4 sm:px-0"></div>

    <!-- Navbar -->
    <nav
        class="sticky top-0 z-40 backdrop-blur-md bg-white/70 border-b border-slate-200 supports-[backdrop-filter]:bg-white/60">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex items-center justify-between h-16">
                <!-- Logo -->
                <div class="flex-shrink-0">
                    <a href="/" class="flex items-center gap-2">
                        <i class="ri-booklet-fill text-2xl text-blue-600"></i>
                        <span class="font-bold text-xl tracking-tight text-slate-900">Hisaab<span
                                class="text-blue-600">Manager</span></span>
                    </a>
                </div>

                <!-- Navigation Links -->
                <% var loggedin=typeof loggedin !=='undefined' ? loggedin : true %>
                    <% if(loggedin){ %>
                        <div class="hidden md:block">
                            <div class="ml-10 flex items-baseline space-x-4">
                                <a href="/"
                                    class="text-slate-600 hover:text-blue-600 hover:bg-blue-50 px-3 py-2 rounded-md text-sm font-medium transition-colors">Home</a>
                                <a href="/hisaab/create"
                                    class="text-slate-600 hover:text-blue-600 hover:bg-blue-50 px-3 py-2 rounded-md text-sm font-medium transition-colors">Create
                                    New Hisaab</a>
                                <a href="/logout"
                                    class="text-red-500 hover:text-red-700 hover:bg-red-50 px-3 py-2 rounded-md text-sm font-medium transition-colors">Logout</a>
                            </div>
                        </div>
                        <!-- Mobile menu button (basic implementation) -->
                        <div class="-mr-2 flex md:hidden">
                            <a href="/logout" class="text-red-500 p-2"><i class="ri-logout-box-r-line text-xl"></i></a>
                        </div>
                        <% } %>
            </div>
        </div>
    </nav>

    <!-- Error Message (Hidden by default, used for param errors) -->
    <div id="error-message"
        class="hidden fixed top-20 left-1/2 -translate-x-1/2 z-50 bg-red-500 text-white px-6 py-3 rounded-full shadow-lg text-sm font-medium transform transition-all duration-300">
        <span>Some error</span>
    </div>

    <script>
        // URL Parameter Error Handling
        const urlParams = new URLSearchParams(window.location.search);
        const error = urlParams.get('error');

        if (error) {
            const errorMessage = document.getElementById('error-message');
            errorMessage.querySelector('span').innerText = "Something went wrong"; // Or decode error param if safe
            errorMessage.classList.remove('hidden');
            setTimeout(() => {
                errorMessage.classList.add('hidden');
                urlParams.delete('error');
                window.history.replaceState({}, document.title, window.location.pathname);
            }, 3000);
        }

        // Backend Messages
        let successMsg = "<%= success_msg.length > 0 ? success_msg[0] : '' %>";
        let errorMsg = "<%= error_msg.length > 0 ? error_msg[0] : '' %>";

        function showToast(message, type) {
            const toastContainer = document.getElementById('toast-container');
            const toastId = 'toast-' + Date.now();

            // Icon and colors based on type
            const isSuccess = type === 'success';
            const iconClass = isSuccess ? 'ri-checkbox-circle-fill text-emerald-500' : 'ri-error-warning-fill text-rose-500';
            const progressColor = isSuccess ? 'bg-emerald-500' : 'bg-rose-500';
            const borderColor = isSuccess ? 'border-emerald-100' : 'border-rose-100';

            const toast = document.createElement('div');
            toast.id = toastId;
            toast.className = `pointer-events-auto w-full bg-white border ${borderColor} shadow-lg rounded-lg overflow-hidden transform transition-all duration-300 translate-x-full opacity-0`;
            toast.innerHTML = `
                <div class="p-4 flex items-start gap-3">
                    <i class="${iconClass} text-xl mt-0.5"></i>
                    <div class="flex-1">
                        <p class="text-sm font-medium text-slate-900">${message}</p>
                    </div>
                    <button onclick="dismissToast('${toastId}')" class="text-slate-400 hover:text-slate-600 transition-colors">
                        <i class="ri-close-line text-lg"></i>
                    </button>
                </div>
                <div class="h-1 w-full bg-slate-100">
                    <div class="h-full ${progressColor} transition-all duration-[3000ms] ease-linear w-full" id="progress-${toastId}"></div>
                </div>
            `;

            toastContainer.appendChild(toast);

            // Animate in
            requestAnimationFrame(() => {
                toast.classList.remove('translate-x-full', 'opacity-0');
            });

            // Start progress bar
            setTimeout(() => {
                const progress = document.getElementById(`progress-${toastId}`);
                if (progress) progress.style.width = '0%';
            }, 50);

            // Auto dismiss
            setTimeout(() => {
                dismissToast(toastId);
            }, 3000);
        }

        function dismissToast(id) {
            const toast = document.getElementById(id);
            if (toast) {
                toast.classList.add('translate-x-full', 'opacity-0');
                setTimeout(() => toast.remove(), 300);
            }
        }

        // Trigger existing messages
        if (successMsg && successMsg.trim() !== '') showToast(successMsg, "success");
        if (errorMsg && errorMsg.trim() !== '') showToast(errorMsg, "error");
    </script>